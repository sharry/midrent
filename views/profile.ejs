<%- include('./index-user-header.ejs', { user }) %>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div id="user-left-stuff" class="d-flex flex-column align-items-center text-center p-3 py-5">
                <div class="admin-badge">
                    <svg viewBox="0 0 512 512">
                        <path d="M479.07 111.35a16 16 0 00-13.15-14.75C379.89 81.18 343.69 69.12 266 34.16c-7.76-2.89-12.57-2.84-20 0-77.69 35-113.89 47-199.92 62.44a16 16 0 00-13.15 14.75c-3.85 61.1 4.34 118 24.36 169.15a348.86 348.86 0 0071.43 112.41c44.67 47.43 94.2 75.12 119.74 85.6a20 20 0 0015.11 0c27-10.92 74.69-37.82 119.71-85.62a348.86 348.86 0 0071.43-112.39c20.02-51.14 28.21-108.05 24.36-169.15z" />
                    </svg>
                </div>
                <img class="rounded-circle mt-5 mb-2" width="150px" src="<%= user.photoUrl %>">
                <span class="font-weight-bold"> <%= user.firstName %>  </span>
                <span class="text-black-50"> <%= user.email %>  </span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Modifier vos paramètres</h4>
                </div>
                <form action="/profile?id=<%= user.id %>" enctype="multipart/form-data" method="post" >
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Prénom</label><input type="text" name="firstName" class="form-control" placeholder="Votre prénom" value="<%=typeof(user) !== "undefined" && user.firstName %> "></div>
                    <div class="col-md-6"><label class="labels">Nom</label><input type="text" name="lastName" class="form-control" value="<%=typeof(user) !== "undefined" && user.lastName %> " placeholder="Votre nom"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Téléphone</label><input type="text" name="phone" class="form-control" placeholder="Entre votre numéro de téléphone"  value="<%=typeof(user) !== "undefined" && user.phone %> " ></div>
                    <div class="col-md-12"><label class="labels">Date de naissance</label><input type="date" name="birthDate" class="form-control" placeholder="Entrer votre date de naissance" value="<%=typeof(birthDate) !== "undefined" && birthDate %>"></div>
                    
                </div>
                <div class="form-group my-3 labels">
                    
					<label for="radM">Homme</label>
					<input type="radio" name="sex" class="radio mx-3" id="radM" value="m"
					<%if(typeof(user) != 'undefined' && user.isMale){%> <%="checked"%> <%}%>
					/>
					<label for="radMme">Femme</label>
					<input type="radio" name="sex" class="radio mx-3" id="radF" value="f"
					<%if(typeof(user) != 'undefined' && !user.isMale){%> <%="checked"%> <%}%>/>
                <div class="mt-5 text-center"><button class="btn btn-primary px-5" type="submit">Sauvegarder</button></div>
            </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>