<div
	class="modal fade"
	id="editLocalForm"
	tabindex="-1"
	aria-labelledby="editLocalFormLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="newLocalFormLabel">Modifier ce local</h5>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<form action="/locals/update" method="post">
				<div class="modal-body">
					<div class="form-group mb-3">
						<input
							type="text"
							name="localId"
							class="form-control"
							id="editlocalid"
							aria-describedby="idHelp"
							readonly
							hidden
						/>
					</div>
					<div class="form-group mb-3">
						<label for="city">Ville</label>
						<select
							name="city"
							id="editcity"
							class="form-select city"
							aria-label="Disabled select example"
							disabled
						>
							<% if (typeof(cities) !== "undefined"){ %> <%for(var city of
							cities){%>
							<option value="<%= city.city %>"><%= city.city %></option>
							<% } %><% } %>
						</select>
					</div>
					<div class="form-group mb-3">
						<label for="district">Quartier</label>
						<select
							name="district"
							id="editdistrict"
							class="form-select"
							aria-label="Default select example"
							required
						>
							<% if (typeof(districts) !== "undefined"){ %> <%for(var district
							of districts){%>
							<option value="<%= district.id %>"><%= district.name %></option>
							<% } %><% } %>
						</select>
					</div>
					<div class="form-group mb-3">
						<label for="address">Adresse</label>
						<input
							type="text"
							name="address"
							class="form-control"
							id="editaddress"
							aria-describedby="addressHelp"
							placeholder="Taper l'adresse du local (sans quartier et ville)"
						/>
					</div>
					<div class="form-group mb-3">
						<label for="cost">Coût (DH/mois)</label>
						<input
							type="number"
							name="cost"
							class="form-control"
							id="editcost"
							aria-describedby="costHelp"
							step="50"
							placeholder="Combien votre client doit payer par mois?"
							min="0"
							required
						/>
					</div>
					<div class="form-group mb-3">
						<label for="localType">Type</label>
						<select
							name="localType"
							id="editlocalType"
							class="form-select"
							aria-label="Default select example"
							required
						>
							<option value="room">Chambre</option>
							<option value="apartment">Appartement</option>
							<option value="studio">Studio</option>
							<option value="ville">Villa</option>
							<option value="dormitory">Résidence universitaire</option>
						</select>
					</div>
					<div class="form-group mb-3">
						<label for="size">Effectif</label>
						<input
							type="number"
							name="size"
							class="form-control"
							id="editsize"
							min="1"
							max="9"
							aria-describedby="sizeHelp"
							placeholder="Combien de personnes ce local tiendra?"
							required
						/>
					</div>
					<div class="form-check form-switch">
						<input
							class="form-check-input"
							type="checkbox"
							id="editfurniture"
							name="furnitureIncluded"
						/>
						<label class="form-check-label" for="flexSwitchCheckDefault1"
							>Comprend-il des meubles</label
						>
					</div>
					<div class="form-check form-switch">
						<input
							class="form-check-input"
							type="checkbox"
							id="editbills"
							name="billsIncluded"
						/>
						<label class="form-check-label" for="flexSwitchCheckDefault2"
							>Les factures d'eau et d'électricité sont incluses</label
						>
					</div>
					<div class="form-check form-switch">
						<input
							class="form-check-input"
							type="checkbox"
							id="editwifi"
							name="wifiIncluded"
						/>
						<label class="form-check-label" for="flexSwitchCheckDefault3"
							>Le Wi-Fi est disponible</label
						>
					</div>
					<div class="form-check form-switch">
						<input
							class="form-check-input"
							type="checkbox"
							id="editgas"
							name="gasIncluded"
						/>
						<label class="form-check-label" for="flexSwitchCheckDefault4"
							>Les factures de gaz sont inclus</label
						>
					</div>
					<div class="form-group mb-3">
						<label for="size">Images</label>
						<div id="editimages" class="edit-images"></div>
					</div>
				</div>
				<div class="modal-footer">
					<button
						type="submit"
						id="savelocal"
						disabled="disabled"
						class="btn btn-primary"
					>
						Sauvegarder
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
